{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist/app",
    "types": ["node", "react", "react-dom", "jest"],
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  },
  "include": ["src/**/*", "./global.d.ts", "./global.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ]
}
